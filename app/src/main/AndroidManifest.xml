<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administradorlecturas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_book_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_book_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdministradorLecturas">
        <activity
            android:name=".activities.LecturaInformacionActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.NuevaLecturaActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.SugerenciasActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LeidosActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LeyendoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>